{
  "mcpServers": {
    "jira": {
      "command": "npx",
      "args": [
        "-y",
        "@mcp-devtools/jira"
      ],
      "env": {
        "JIRA_URL": "https://tu-empresa.atlassian.net",
        "JIRA_API_MAIL": "tu-email@ejemplo.com",
        "JIRA_API_KEY": "tu-api-token-aqui"
      }
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "tu-github-token-aqui"
      }
    },
    "figma-desktop": {
      "url": "http://127.0.0.1:3845/mcp"
    },
    "figma-remote": {
      "url": "https://mcp.figma.com/mcp"
    }
  }
}

